<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Papeleria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibreriaWeb1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Papeleria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
	                    <li class="nav-item" style="display: @((Context.Session.GetInt32("LogueadoId") != null) ? "block" : "none")">
		                    <div class="dropdown">
			                    <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Administrador</a>
			                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
				                    <a class="dropdown-item" asp-area="" asp-controller="Administrador" asp-action="ListarUsuarios">Listar Usuarios</a>
				                    <a class="dropdown-item" asp-area="" asp-controller="Administrador" asp-action="CrearUsuario">Crear Usuario</a>
				                    <a class="dropdown-item" asp-area="" asp-controller="Cliente" asp-action="ListarCliente">Listar Clientes</a>
			                    </div>
		                    </div>
	                    </li>
	                    <li class="nav-item" style="display: @((Context.Session.GetInt32("LogueadoId") != null) ? "block" : "none")">
		                    <div class="dropdown">
			                    <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Articulo</a>
			                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
				                    <a class="dropdown-item" asp-area="" asp-controller="Articulo" asp-action="ListarArticulos">Listar Articulos</a>
				                    <a class="dropdown-item" asp-area="" asp-controller="Articulo" asp-action="CrearArticulo">Crear Articulo</a>
			                    </div>
		                    </div>
	                    </li>
	                    <li class="nav-item" style="display: @((Context.Session.GetInt32("LogueadoId") != null) ? "block" : "none")">
		                    <div class="dropdown">
			                    <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Pedido</a>
			                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
				                    <a class="dropdown-item" asp-area="" asp-controller="Pedido" asp-action="CrearPedido">Crear Pedido</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Pedido" asp-action="ListarPedidosPendientesPorFecha">Pedidos No Entregados</a>
			                    </div>
		                    </div>
	                    </li>
                        <li class="nav-item">
                            @if (Context.Session.GetInt32("LogueadoId") != null)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Logout">Cerrar Sesion</a>
                            }else{
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Login">Iniciar Sesion</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Obligatorio de Programacion 3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
